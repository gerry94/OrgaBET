//cancellare i vecchi campi
db.seriea.update({}, {$unset: {B365H:1, BWH:1, BSH:1, GBH:1, IWH:1, LBH:1, PSH:1, SOH:1, SBH:1, SJH:1, SYH:1, VCH:1, WHH:1}}, {multi:true} );

